# Git clone with my gihub repositories
func gclz()
{
  if [ -z $1 ]; then
    echo "Usage: gclz <repo_url_or_name>"
  else
    current_dir=$(pwd)
    cd ~/i
    case "$1" in
      http://*|git:*|https://*)
        git clone $1
        ;;
      *)
        git clone git@github.com:hiyongliz/$1.git
        ;;
    esac

    cd "$current_dir"
  fi
}

